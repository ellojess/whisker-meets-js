<div class="row mt-4">
  <div class="col-lg-6 offset-lg-3">
    <img class="img-fluid w-100 rounded mb-3" src="{{dog.imgUrl}}" alt="Card image cap">
    <h3>{{dog.title}}</h3>
    <div class="lead">{{dog.desc}}</div>
    <div class="text-right">
      <a href="/dogs/{{dog.id}}/edit">Edit</a>
    </div>
</div>

{{!-- FAVORITE BUTTON --}}
<div class="col-lg-4 offset-lg-1">
    <div class="d-flex justify-content-between">
        <b>Favorites ({{dog.Favorites.length}})</b>
        <a href="/dogs/{{dog.id}}/favorites/new" class="btn btn-primary btn-sm">Favorites</a>
    </div>

    <div class="list-group mt-4">
      {{#each dog.Favorites}}
        <div class="list-group-item clearfix">
          <div class="float-left">
            {{this.name}}
          </div>
          <div class="float-right">
            <form class="form-inline" action="/dogs/{{../dog.id}}/rsvps/{{this.id}}?_method=DELETE" method="post">
              <button type="submit" class="btn btn-link btn-sm">Remove</button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
</div>