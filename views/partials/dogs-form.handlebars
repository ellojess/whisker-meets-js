<!-- views/partials/dogs-form.handlebars -->

<div class="form-group">
  <label for="name">Name</label>
  <input name="name" id="name" class="form-control" placeholder="Name of doggo" value="{{dog.title}}" />
</div>
<div class="form-group">
  <label for="desc">Description</label>
  <textarea name="desc" class="form-control" placeholder="Description dog.">{{dog.desc}}</textarea>
</div>
<div class="form-group">
  <label for="imgUrl">Photo of Floof</label>
  <input name="imgUrl" class="form-control" placeholder="Paste in URL" value="{{dog.imgUrl}}"/>
</div>